            <h2>Bienvenido, {{user.role}}:{{user.first_name}}!</h2>
        </div>
<div class="container my-5">
    <div class="row">
        {{#each this.payload}}
        <div class="card" style="width: 22rem;">
            <img src="{{img}}" class="img-fluid" alt="{{nombre}}">
            <div class="card-body text-center">
                <p class="card-text">{{nombre}}<br><span class="text-danger">${{precio}}</span></p>
                <button class="btn btn-dark" onclick="addProduct('{{product._id}}')">Agregar</button>
            </div>
        </div>
        {{/each}}
    </div>
</div>
</body>
